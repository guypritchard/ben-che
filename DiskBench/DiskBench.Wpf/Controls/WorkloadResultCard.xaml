<UserControl x:Class="DiskBench.Wpf.WorkloadResultCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DiskBench.Wpf">
    
    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource H3}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <Border Background="{StaticResource BackgroundLightBrush}" 
                                CornerRadius="4" Padding="8,2" Margin="0,0,8,0">
                            <TextBlock Text="{Binding BlockSizeText}" FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Border>
                        <Border Background="{StaticResource BackgroundLightBrush}" 
                                CornerRadius="4" Padding="8,2" Margin="0,0,8,0">
                            <TextBlock Text="{Binding PatternText}" FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Border>
                        <Border Background="{StaticResource BackgroundLightBrush}" 
                                CornerRadius="4" Padding="8,2">
                            <TextBlock Text="{Binding QueueDepthText}" FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                
                <!-- Performance Score Badge -->
                <Border Grid.Column="1" CornerRadius="8" Padding="12,6"
                        Background="{Binding ScoreBackground}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ScoreLabel}" FontSize="11" 
                                   Foreground="{Binding ScoreForeground}" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Main Metrics -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Throughput -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="THROUGHPUT" FontSize="10" 
                               Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ThroughputValue}" Style="{StaticResource BigValue}"
                                   Foreground="{Binding ThroughputColor}"/>
                        <TextBlock Text="{Binding ThroughputUnit}" FontSize="14" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Bottom" Margin="4,0,0,6"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- IOPS -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="IOPS" FontSize="10" 
                               Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding IopsValue}" Style="{StaticResource BigValue}"/>
                        <TextBlock Text="{Binding IopsUnit}" FontSize="14" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Bottom" Margin="4,0,0,6"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Latency -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="LATENCY (p99)" FontSize="10" 
                               Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding LatencyValue}" Style="{StaticResource BigValue}"
                                   Foreground="{Binding LatencyColor}"/>
                        <TextBlock Text="{Binding LatencyUnit}" FontSize="14" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Bottom" Margin="4,0,0,6"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
            <!-- Throughput Bar -->
            <Grid Grid.Row="2" Margin="0,0,0,12">
                <Border Background="{StaticResource BackgroundLightBrush}" 
                        CornerRadius="6" Height="24"/>
                <Border CornerRadius="6" Height="24" HorizontalAlignment="Left"
                        Width="{Binding BarWidth}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="{Binding BarColorStart}" Offset="0"/>
                            <GradientStop Color="{Binding BarColorEnd}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            
            <!-- Latency Percentiles -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="p50" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Text="{Binding P50}" FontSize="13" FontWeight="Medium" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="p90" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Text="{Binding P90}" FontSize="13" FontWeight="Medium" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="p99" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Text="{Binding P99}" FontSize="13" FontWeight="Medium" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3">
                    <TextBlock Text="p99.9" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Text="{Binding P999}" FontSize="13" FontWeight="Medium" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="4">
                    <TextBlock Text="max" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Text="{Binding MaxLatency}" FontSize="13" FontWeight="Medium" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
