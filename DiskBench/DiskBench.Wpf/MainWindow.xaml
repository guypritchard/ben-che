<Window x:Class="DiskBench.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskBench.Wpf"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="DiskBench - Storage Performance" 
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1000"
        Background="Transparent"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <local:PercentToWidthConverter x:Key="PercentToWidth"/>
        <local:PercentToScaleConverter x:Key="PercentToScale"/>
        <local:PercentToDashArrayConverter x:Key="PercentToDashArray"/>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundDarkBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" 
                    CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <!-- Logo/Icon -->
                        <Ellipse Width="24" Height="24" Margin="0,0,12,0">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#58A6FF" Offset="0"/>
                                    <GradientStop Color="#A371F7" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="DiskBench" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="Storage Performance Analyzer" FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                        <Button Content="─" Width="40" Height="32" Click="Minimize_Click"
                                Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}"
                                BorderThickness="0" FontSize="14" Cursor="Hand"/>
                        <Button Content="□" Width="40" Height="32" Click="Maximize_Click"
                                Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}"
                                BorderThickness="0" FontSize="14" Cursor="Hand"/>
                        <Button Content="✕" Width="40" Height="32" Click="Close_Click"
                                Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}"
                                BorderThickness="0" FontSize="14" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel - Configuration (hidden in quick mode) -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,16,0"
                              Visibility="{Binding ShowConfigPanel, Converter={StaticResource BoolToVis}}"
                              Width="320">
                    <StackPanel>
                        <!-- Profile Selection Card -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="BENCHMARK PROFILE" Style="{StaticResource Label}" Margin="0,0,0,12"/>
                                
                                <ComboBox ItemsSource="{Binding Profiles}" 
                                          SelectedItem="{Binding SelectedProfile}"
                                          DisplayMemberPath="Name"
                                          Style="{StaticResource ModernComboBox}"
                                          IsEnabled="{Binding IsNotRunning}"/>
                                
                                <TextBlock Text="{Binding SelectedProfile.Description}" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap" FontSize="12" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Drive Selection Card -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="TARGET DRIVE" Style="{StaticResource Label}" Margin="0,0,0,12"/>
                                
                                <ComboBox ItemsSource="{Binding Drives}" 
                                          SelectedItem="{Binding SelectedDrive}"
                                          Style="{StaticResource ModernComboBox}"
                                          IsEnabled="{Binding IsNotRunning}"/>
                                
                                <!-- Drive Info -->
                                <Border Background="{StaticResource BackgroundLightBrush}" 
                                        CornerRadius="8" Padding="12" Margin="0,12,0,0"
                                        Visibility="{Binding HasDriveInfo, Converter={StaticResource BoolToVis}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Grid.Row="0">
                                            <TextBlock Text="DRIVE" FontSize="10" 
                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                            <TextBlock Text="{Binding DriveInfo.DriveName}" FontSize="14" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Grid.Row="0">
                                            <TextBlock Text="CONNECTION" FontSize="10" 
                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                            <TextBlock Text="{Binding DriveInfo.BusType}" FontSize="14" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="0" Grid.Row="1">
                                            <TextBlock Text="FILE SYSTEM" FontSize="10" 
                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                            <TextBlock Text="{Binding DriveInfo.FileSystem}" FontSize="14" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Grid.Row="1">
                                            <TextBlock Text="DRIVE TYPE" FontSize="10" 
                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                            <TextBlock Text="{Binding DriveInfo.DriveType}" FontSize="14" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                        
                        <!-- Settings Card -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="SETTINGS" Style="{StaticResource Label}" Margin="0,0,0,12"/>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <TextBlock Text="File Size" Foreground="{StaticResource TextSecondaryBrush}" 
                                                   FontSize="12" Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding FileSizes}" 
                                                  SelectedItem="{Binding SelectedFileSize}"
                                                  Style="{StaticResource ModernComboBox}"
                                                  IsEnabled="{Binding IsNotRunning}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="Duration" Foreground="{StaticResource TextSecondaryBrush}" 
                                                   FontSize="12" Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding Durations}" 
                                                  SelectedItem="{Binding SelectedDuration}"
                                                  Style="{StaticResource ModernComboBox}"
                                                  IsEnabled="{Binding IsNotRunning}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <StackPanel>
                                    <TextBlock Text="Trials" Foreground="{StaticResource TextSecondaryBrush}" 
                                               FontSize="12" Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding Trials}" 
                                              SelectedItem="{Binding SelectedTrials}"
                                              Style="{StaticResource ModernComboBox}"
                                              IsEnabled="{Binding IsNotRunning}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <Button Content="▶  Start Benchmark" 
                                Command="{Binding StartBenchmarkCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Visibility="{Binding IsNotRunning, Converter={StaticResource BoolToVis}}"
                                HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                        
                        <Button Content="⏹  Stop" 
                                Command="{Binding StopBenchmarkCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}"
                                HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                        
                        <Button Content="Export Results" 
                                Command="{Binding ExportCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Visibility="{Binding HasResults, Converter={StaticResource BoolToVis}}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Right Panel - Results -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Quick Mode Header (shown only in quick mode) -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16"
                            Visibility="{Binding IsQuickMode, Converter={StaticResource BoolToVis}}">
                        <StackPanel>
                            <TextBlock Text="QUICK BENCHMARK" Style="{StaticResource Label}" Margin="0,0,0,12"/>
                            
                            <!-- Drive Header with Icon -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="{Binding DriveInfo.BusTypeIcon}" FontSize="28" 
                                           VerticalAlignment="Center" Margin="0,0,12,0"
                                           Foreground="{StaticResource AccentBlueBrush}"/>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding QuickModeDrive}" Style="{StaticResource H2}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding DriveInfo.DriveName}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DriveInfo.BusType}" 
                                                   Foreground="{StaticResource AccentBlueBrush}" FontSize="12"/>
                                        <TextBlock Text=" • " Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                                        <TextBlock Text="{Binding DriveInfo.FileSystem}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Space Usage Bar -->
                            <TextBlock Text="{Binding DriveInfo.UsedText}" 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <Grid Height="8">
                                <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="4"/>
                                <Border Background="{StaticResource ProgressGradient}" CornerRadius="4"
                                        HorizontalAlignment="Stretch">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="{Binding DriveInfo.UsedPercent, Converter={StaticResource PercentToScale}}" ScaleY="1"/>
                                    </Border.RenderTransform>
                                    <Border.RenderTransformOrigin>
                                        <Point X="0" Y="0.5"/>
                                    </Border.RenderTransformOrigin>
                                </Border>
                            </Grid>
                            
                            <!-- Size Details -->
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="FREE SPACE" FontSize="10" 
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Text="{Binding DriveInfo.FreeSpace}" FontSize="14" 
                                               Foreground="{StaticResource AccentGreenBrush}" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="TOTAL SIZE" FontSize="10" 
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Text="{Binding DriveInfo.TotalSize}" FontSize="14" 
                                               Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status/Progress Area -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="{Binding CurrentWorkloadName}" Style="{StaticResource H3}"/>
                                <TextBlock Text="{Binding CurrentPhase}" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" HorizontalAlignment="Center"
                                        Visibility="{Binding IsQuickMode, Converter={StaticResource BoolToVis}}">
                                <Grid Width="180" Height="180">
                                    <Ellipse Width="140" Height="140" StrokeThickness="10"
                                             Stroke="{StaticResource BackgroundLightBrush}"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Ellipse Width="140" Height="140" StrokeThickness="10"
                                             Stroke="{StaticResource ProgressGradient}"
                                             StrokeDashArray="{Binding Progress, Converter={StaticResource PercentToDashArray}, ConverterParameter=439.8}"
                                             StrokeStartLineCap="Round"
                                             StrokeEndLineCap="Round"
                                             Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                             RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="-90"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    <Ellipse Width="140" Height="140" StrokeThickness="10"
                                             Stroke="{StaticResource ProgressGradient}"
                                             StrokeDashArray="110,329.8"
                                             StrokeStartLineCap="Round"
                                             StrokeEndLineCap="Round"
                                             Visibility="{Binding ShowPendingValues, Converter={StaticResource BoolToVis}}"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                             RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="-90"/>
                                        </Ellipse.RenderTransform>
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ShowPendingValues}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard x:Name="WarmupRingSpin">
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                     From="-90" To="270" Duration="0:0:1.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="WarmupRingSpin"/>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <StackPanel Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="{Binding CurrentSpeed}" FontSize="16"
                                                       FontWeight="Bold" Foreground="{StaticResource AccentBlueBrush}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="SPEED" FontSize="9"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                            <TextBlock Text="{Binding CurrentIops}" FontSize="16"
                                                       FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="IOPS" FontSize="9"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Visibility="{Binding ShowWarmup, Converter={StaticResource BoolToVis}}"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="WARMING UP" FontSize="14"
                                                       FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Collecting samples" FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center" Margin="0,4,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsWarmup}" Value="True">
                                                                <DataTrigger.EnterActions>
                                                                    <BeginStoryboard x:Name="WarmupPulse">
                                                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                             From="0.4" To="1.0" Duration="0:0:0.8"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </DataTrigger.EnterActions>
                                                                <DataTrigger.ExitActions>
                                                                    <StopStoryboard BeginStoryboardName="WarmupPulse"/>
                                                                </DataTrigger.ExitActions>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Visibility="{Binding ShowFinalizing, Converter={StaticResource BoolToVis}}"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="FINALIZING" FontSize="14"
                                                       FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Draining IO" FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center" Margin="0,4,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ShowFinalizing}" Value="True">
                                                                <DataTrigger.EnterActions>
                                                                    <BeginStoryboard x:Name="FinalizingPulse">
                                                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                             From="0.4" To="1.0" Duration="0:0:0.8"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </DataTrigger.EnterActions>
                                                                <DataTrigger.ExitActions>
                                                                    <StopStoryboard BeginStoryboardName="FinalizingPulse"/>
                                                                </DataTrigger.ExitActions>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Visibility="{Binding ShowIdle, Converter={StaticResource BoolToVis}}"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="READY" FontSize="14"
                                                       FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Waiting for next trial" FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <TextBlock Text="PROGRESS" FontSize="10"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           HorizontalAlignment="Center" Margin="0,8,0,0"
                                           Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}"/>
                                <TextBlock Text="{Binding ProgressText}" FontSize="20"
                                           FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}"/>
                                <StackPanel HorizontalAlignment="Center" Margin="0,8,0,0"
                                            Visibility="{Binding ShowWarmup, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="WARMUP" FontSize="10"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="No values yet" FontSize="14"
                                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Margin="0,8,0,0"
                                            Visibility="{Binding ShowFinalizing, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="FINALIZING" FontSize="10"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Draining IO" FontSize="14"
                                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                        Visibility="{Binding IsQuickMode, Converter={StaticResource InverseBoolToVis}}">
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="CURRENT SPEED" FontSize="10" 
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock Text="{Binding CurrentSpeed}" FontSize="24" 
                                                   FontWeight="Bold" Foreground="{StaticResource AccentBlueBrush}"
                                                   Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}"/>
                                        <TextBlock Text="..." FontSize="20"
                                                   FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"
                                                   Visibility="{Binding ShowPendingValues, Converter={StaticResource BoolToVis}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ShowPendingValues}" Value="True">
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard x:Name="WarmupSpeedPulse">
                                                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                         From="0.4" To="1.0" Duration="0:0:0.8"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <StopStoryboard BeginStoryboardName="WarmupSpeedPulse"/>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="--" FontSize="20"
                                                   FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"
                                                   Visibility="{Binding ShowIdle, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="IOPS" FontSize="10" 
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock Text="{Binding CurrentIops}" FontSize="24" 
                                                   FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}"
                                                   Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}"/>
                                        <TextBlock Text="..." FontSize="20"
                                                   FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"
                                                   Visibility="{Binding ShowPendingValues, Converter={StaticResource BoolToVis}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ShowPendingValues}" Value="True">
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard x:Name="WarmupIopsPulse">
                                                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                         From="0.4" To="1.0" Duration="0:0:0.8"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <StopStoryboard BeginStoryboardName="WarmupIopsPulse"/>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="--" FontSize="20"
                                                   FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"
                                                   Visibility="{Binding ShowIdle, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="PROGRESS" FontSize="10" 
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}"/>
                                        <TextBlock Text="{Binding ProgressText}" FontSize="24" 
                                                   FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"
                                                   Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}"/>
                                        <TextBlock Text="WARMUP" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                                   Visibility="{Binding ShowWarmup, Converter={StaticResource BoolToVis}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ShowWarmup}" Value="True">
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard x:Name="WarmupStatusPulse">
                                                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                         From="0.5" To="1.0" Duration="0:0:0.9"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <StopStoryboard BeginStoryboardName="WarmupStatusPulse"/>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="FINALIZING" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                                   Visibility="{Binding ShowFinalizing, Converter={StaticResource BoolToVis}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ShowFinalizing}" Value="True">
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard x:Name="FinalizingStatusPulse">
                                                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                         From="0.5" To="1.0" Duration="0:0:0.9"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <StopStoryboard BeginStoryboardName="FinalizingStatusPulse"/>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="READY" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                                   Visibility="{Binding ShowIdle, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <Grid Height="8" x:Name="ProgressTrack" ClipToBounds="True"
                                      Visibility="{Binding IsPhaseActive, Converter={StaticResource BoolToVis}}">
                                    <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="4"/>
                                    <Border x:Name="WarmupIndicator" Height="8" Width="60"
                                            Background="{StaticResource ProgressGradient}"
                                            CornerRadius="4" HorizontalAlignment="Left"
                                            Visibility="{Binding ShowPendingValues, Converter={StaticResource BoolToVis}}">
                                        <Border.RenderTransform>
                                            <TranslateTransform X="-60"/>
                                        </Border.RenderTransform>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ShowPendingValues}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard x:Name="WarmupSlide">
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                                                     From="-60"
                                                                                     To="800"
                                                                                     Duration="0:0:1.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="WarmupSlide"/>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <Border Background="{StaticResource ProgressGradient}" CornerRadius="4"
                                            HorizontalAlignment="Stretch"
                                            Visibility="{Binding ShowLiveValues, Converter={StaticResource BoolToVis}}">
                                        <Border.RenderTransform>
                                            <ScaleTransform ScaleX="{Binding Progress, Converter={StaticResource PercentToScale}}" ScaleY="1"/>
                                        </Border.RenderTransform>
                                        <Border.RenderTransformOrigin>
                                            <Point X="0" Y="0.5"/>
                                        </Border.RenderTransformOrigin>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Results Grid -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Results}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:WorkloadResultCard Margin="0,0,0,12"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty State -->
                    <Border Grid.Row="2" 
                            Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVis}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse Width="80" Height="80" Margin="0,0,0,24">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3358A6FF" Offset="0"/>
                                        <GradientStop Color="#33A371F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="Ready to Benchmark" Style="{StaticResource H2}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Select a profile and drive, then click Start Benchmark" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
